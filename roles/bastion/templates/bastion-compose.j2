version: '3.5'
services:
  bastion-{{ item.name }}:
    build: 
      context: ../.
    environment:
      USERS: "{{ item.name }}"
    ports:
      - "{{ item.port }}:22"
    volumes:
      - /var/log/bastion/{{ item.name }}:/var/log/bastion/{{ item.name }}
      - /opt/bastion/docker/{{ item.name }}/authorized_keys:/etc/authorized-keys:ro
